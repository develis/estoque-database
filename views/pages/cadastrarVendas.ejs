<%- include('../partials/header'); %>

    <main class="container-fluid">
        <div class="row">
            <div class="col-md-12 pl-4">
                <p class="rotas">Home/Vendas/<b>Cadastrar Vendas</b></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <h1 class="text-center h1_secoes">Cadastrar Vendas</h1>
                <hr>
                <p class="text-justify">
                <form action="/cadastrarvendas" method="POST" class="form_cadastro">
                    <input type="text" placeholder="ID do Produto" name="produto_vendido" id="produto_vendido"
                        class="input_form">
                    <input type="number" placeholder="Quantidade do Produto" name="quantidade_vendida"
                        id="quantidade_vendida" class="input_form">
                    <input type="number" step="0.01" placeholder="Total" name="total" id="total" class="input_form">
                    <input type="number" placeholder="ID do Vendedor" name="vendedor" id="vendedor" class="input_form">
                    <input type="text" hidden value="now()" name="data_venda" id="data_venda">
                    <button type="submit" class="botao_form">Cadastrar</button>
                </form>
                </p>
            </div>
            <div class="col-md-3 d-flex flex-column align-items-center menu_global">
                <a name="" id="" class="botao_menu" href="/" role="button">Inicio</a>
                <a name="" id="" class="botao_menu" href="/estoque" role="button">Estoque</a>
                <a name="" id="" class="botao_menu" href="/vendas" role="button">Vendas</a>
                <a name="" id="" class="botao_menu" href="/produtos" role="button">Produtos</a>
                <a name="" id="" class="botao_menu" href="/funcionarios" role="button">Funcionarios</a>
                <a name="" id="" class="botao_menu" href="/fornecedores" role="button">Fornecedores</a>
            </div>
        </div>
    </main>

