<%- include('../partials/header'); %>

    <main class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <h1 class="text-center">Cadastrar Produto</h1>
                <hr>
                <p class="text-justify">
                <form action="/cadastrarprodutos" method="POST" class="form_cadastro">
                    <input type="text" placeholder="Nome do Produto" name="nome_produto" id="nome_produto" class="input_form">
                    <input type="number" placeholder="Quantidade do Produto" name="quantidade_produto"
                        id="quantidade_produto" class="input_form">
                    <input type="text" placeholder="Seção do Produto" name="secao" id="secao" class="input_form">
                    <input type="number" step="0.01" placeholder="Preço do Produto" name="preco" id="preco" class="input_form">
                    <input type="number" placeholder="ID do Funcionário" name="funcionario_produtos"
                        id="funcionario_produtos" class="input_form">
                    <input type="number" placeholder="ID do Fornecedor" name="fornecedor_produtos"
                        id="fornecedor_produtos" class="input_form">
                    <input type="text" hidden value="now()" name="data_insercao" id="data_insercao">
                    <button type="submit" class="botao_form">Cadastrar</button>
                </form>
                </p>
            </div>
            <div class="col-md-4 d-flex flex-column align-items-center">
                <h1>Menu</h1>
                <a name="" id="" class="botao_menu" href="/" role="button">Inicio</a>
                <a name="" id="" class="botao_menu" href="/estoquecompleto" role="button">Estoque Completo</a>
                <a name="" id="" class="botao_menu" href="/estoquesimplificado" role="button">Estoque Simplificado</a>
                <a name="" id="" class="botao_menu" href="/produtos" role="button">Produtos</a>
                <a name="" id="" class="botao_menu" href="/funcionarios" role="button">Funcionarios</a>
                <a name="" id="" class="botao_menu" href="/fornecedores" role="button">Fornecedores</a>
            </div>
        </div>
    </main>

    <%- include('../partials/footer'); %>