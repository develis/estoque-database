<%- include('../partials/header'); %>

    <main class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <h1 class="text-center">Fornecedores</h1>
                <div class="botoes_acoes">
                    <!-- botao_cadastro -->
                    <a href="/cadastrarfornecedores" class="btn btn-primary">Cadastre um novo fornecedor</a>
                </div>
                <hr>
                <p class="text-justify">
                <div class="table-responsive">
                    <table class="tabela_produtos">
                        <thead>
                            <%if (fornecedores_achados == '' ){ %>
                                <tr>
                                    <td colspan="7" class="alert-warning text-center">
                                        Não há nenhuma informação a ser exibida! <br>
                                        <a href="/cadastrarfornecedores" class="botao_cadastro">Cadastre um novo
                                            fornecedor</a>
                                    </td>
                                </tr>
                                <%} else { fornecedores_achados.forEach(function(fornecedor){ %>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>CNPJ</th>
                                    <th>Ações</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= fornecedor.id_fornecedor %>
                                </td>
                                <td>
                                    <%= fornecedor.nome_fornecedor %>
                                </td>
                                <td>
                                    <%= fornecedor.cnpj_fornecedor %>
                                </td>
                                <td>
                                    <a href="/editarfornecedor/<%=fornecedor.id_fornecedor%>"
                                        class="btn btn-warning">Editar</a>
                                    <a href="/deletarfornecedor/<%=fornecedor.id_fornecedor%>"
                                        class="btn btn-danger">Deletar</a>
                                </td>
                            </tr>
                            <% })} %>
                        </tbody>
                    </table>
                </div>
                </p>
            </div>
            <div class="col-md-4 d-flex flex-column align-items-center">
                <h1>Menu</h1>
                <a name="" id="" class="botao_menu" href="/" role="button">Inicio</a>
                <a name="" id="" class="botao_menu" href="/estoquecompleto" role="button">Estoque Completo</a>
                <a name="" id="" class="botao_menu" href="/estoquesimplificado" role="button">Estoque Simplificado</a>
                <a name="" id="" class="botao_menu" href="/produtos" role="button">Produtos</a>
                <a name="" id="" class="botao_menu" href="/funcionarios" role="button">Funcionarios</a>
                <a name="" id="" class="botao_menu" href="/fornecedores" role="button">Fornecedores</a>
            </div>
        </div>
    </main>

    <%- include('../partials/footer'); %>