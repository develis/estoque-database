<%- include('../partials/header'); %>

    <main class="container-fluid">
        <div class="row">
            <div class="col-md-12 pl-4">
                <p class="rotas">Home/Funcionários/<b>Editar Funcionário</b></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <h1 class="text-center h1_secoes">Editar Funcionário</h1>
                <hr>
                <p class="text-justify">
                <form action="/editarfuncionario/<%= id_funcionario %>" method="POST" class="form_cadastro">
                    <input type="text" placeholder="Nome do Funcionário" name="nome_funcionario" id="nome_funcionario"
                        class="input_form" value="<%= nome_funcionario %>">
                    <input type="text" placeholder="Cargo do Funcionário" name="cargo_funcionario"
                        id="cargo_funcionario" class="input_form" value="<%= cargo_funcionario %>">
                    <input type="text" placeholder="CPF do Funcionário" name="cpf_funcionario" id="cpf_funcionario"
                        class="input_form" value="<%= cpf_funcionario %>">
                    <button type="submit" class="botao_form">Cadastrar</button>
                </form>
                </p>
            </div>
            <div class="col-md-3 d-flex flex-column align-items-center menu_global">
                <a name="" id="" class="botao_menu" href="/" role="button">Inicio</a>
                <a name="" id="" class="botao_menu" href="/estoque" role="button">Estoque</a>
                <a name="" id="" class="botao_menu" href="/vendas" role="button">Vendas</a>
                <a name="" id="" class="botao_menu" href="/produtos" role="button">Produtos</a>
                <a name="" id="" class="botao_menu" href="/funcionarios" role="button">Funcionarios</a>
                <a name="" id="" class="botao_menu" href="/fornecedores" role="button">Fornecedores</a>
            </div>
        </div>
    </main>

    <%- include('../partials/footer'); %>