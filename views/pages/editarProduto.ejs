<%- include('../partials/header'); %>

    <main class="container-fluid">
        <div class="row">
            <div class="col-md-12 pl-4">
                <p class="rotas">Home/Produtos/<b>Editar Produto</b></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <h1 class="text-center h1_secoes">Editar Produto</h1>
                <hr>
                <p class="text-justify">
                <form action="/editarproduto/<%= id_produto %>" method="POST" class="form_cadastro">
                    <input type="text" placeholder="Nome do Produto" name="nome_produto" id="nome_produto"
                        class="input_form" value="<%= nome_produto %>">
                    <input type="number" placeholder="Quantidade do Produto" name="quantidade_produto"
                        id="quantidade_produto" class="input_form" value="<%= quantidade_produto %>">
                    <input type="text" placeholder="Seção do Produto" name="secao" id="secao" class="input_form"
                        value="<%= secao %>">
                    <input type="number" step="0.01" placeholder="Preço do Produto" name="preco" id="preco"
                        class="input_form" value="<%= preco %>">
                    <input type="number" placeholder="ID do Funcionário" name="funcionario_produtos"
                        id="funcionario_produtos" class="input_form" value="<%= funcionario_produtos %>">
                    <input type="number" placeholder="ID do Fornecedor" name="fornecedor_produtos"
                        id="fornecedor_produtos" class="input_form" value="<%= fornecedor_produtos %>">
                    <input type="text" hidden value="now()" name="data_insercao" id="data_insercao">
                    <button type="submit" class="botao_form">Editar</button>
                </form>
                </p>
            </div>
            <div class="col-md-3 d-flex flex-column align-items-center menu_global">
                <a name="" id="" class="botao_menu" href="/" role="button">Inicio</a>
                <a name="" id="" class="botao_menu" href="/estoque" role="button">Estoque</a>
                <a name="" id="" class="botao_menu" href="/vendas" role="button">Vendas</a>
                <a name="" id="" class="botao_menu" href="/produtos" role="button">Produtos</a>
                <a name="" id="" class="botao_menu" href="/funcionarios" role="button">Funcionarios</a>
                <a name="" id="" class="botao_menu" href="/fornecedores" role="button">Fornecedores</a>
            </div>
        </div>
    </main>

    <%- include('../partials/footer'); %>