<%- include('../partials/header'); %>

    <main class="container-fluid">
        <div class="row">
            <div class="col-md-12 pl-4">
                <p class="rotas">Home/<b>Estoque</b></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <h1 class="text-center h1_secoes">Estoque</h1>
                <div class="botoes_acoes">
                    <!-- botao_cadastro -->
                    <!-- <a href="/cadastrarprodutos" class="btn btn-primary">Cadastre um novo produto</a> -->
                </div>
                <hr>
                <p class="text-justify">
                <div class="table-responsive">
                    <table class="tabela_produtos">
                        <thead>
                            <%if (estoque_achados=='' ){ %>
                                <tr>
                                    <td colspan="7" class="alert-warning text-center">
                                        Não há nenhuma informação a ser exibida! <br>
                                        <!-- <a href="/cadastrarprodutos" class="botao_cadastro">Cadastre um novo produto</a> -->
                                    </td>
                                </tr>
                                <%} else { estoque_achados.forEach(function(estoque_item){ %>
                                    <th>Produto</th>
                                    <th>Quantidade</th>
                                    <th>Preço Unitário</th>
                                    <th>Funcionário</th>
                                    <th>Fornecedor</th>
                                    <th>Data da Inserção</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= estoque_item.nome_produto %>
                                </td>
                                <td>
                                    <%= estoque_item.quantidade_produto %>
                                </td>
                                <td>
                                    <%= estoque_item.preco %>
                                </td>
                                <td>
                                    <%= estoque_item.nome_funcionario %>
                                </td>
                                <td>
                                    <%= estoque_item.nome_fornecedor %>
                                </td>
                                <td>
                                    <%= new Date(estoque_item.data_insercao).toLocaleDateString() %>
                                </td>
                            </tr>
                            <% })} %>
                        </tbody>
                    </table>
                </div>
                </p>
            </div>
            <div class="col-md-3 d-flex flex-column align-items-center menu_global">
                <a name="" id="" class="botao_menu" href="/" role="button">Inicio</a>
                <a name="" id="" class="botao_menu" href="/estoque" role="button">Estoque</a>
                <a name="" id="" class="botao_menu" href="/vendas" role="button">Vendas</a>
                <a name="" id="" class="botao_menu" href="/produtos" role="button">Produtos</a>
                <a name="" id="" class="botao_menu" href="/funcionarios" role="button">Funcionarios</a>
                <a name="" id="" class="botao_menu" href="/fornecedores" role="button">Fornecedores</a>
            </div>
        </div>
    </main>

    <%- include('../partials/footer'); %>